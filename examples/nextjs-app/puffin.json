{
  "project": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      ".next",
      "dist"
    ],
    "aliases": {
      "@/*": "src/*"
    }
  },
  "modules": {
    "app": "src/app/**/*",
    "features": "src/features/*",
    "components": "src/components/**/*"
  },
  "rules": {
    "module-boundaries": {
      "severity": "error",
      "modules": {
        "@app": "src/app/**/*",
        "@features": "src/features/*",
        "@components": "src/components/**/*"
      },
      "rules": [
        {
          "importer": "@features",
          "imports": "@app",
          "allow": false,
          "message": "Features should not depend on the app layer (pages/layouts)."
        },
        {
          "importer": "@components",
          "imports": "@features",
          "allow": false,
          "message": "Common components should not depend on specific features."
        },
        {
          "importer": "@app",
          "imports": "@components",
          "allow": false,
          "message": "App layer should not depend on common components directly (use features)."
        }
      ]
    },
    "circular-dependencies": {
      "severity": "error"
    }
  },
  "output": {
    "format": "markdown",
    "reportFile": "reports/puffin-report.md"
  }
}