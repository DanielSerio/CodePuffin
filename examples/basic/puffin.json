{
  "project": {
    "include": [
      "src/**/*"
    ]
  },
  "rules": {
    "circular-dependencies": {
      "severity": "error"
    },
    "module-boundaries": {
      "severity": "warn",
      "modules": {
        "@features": "src/features/*"
      },
      "rules": [
        { "from": "@features", "to": "@features", "allow": false }
      ]
    }
  },
  "output": {
    "format": "markdown"
  }
}
