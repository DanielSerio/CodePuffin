{
  "project": {
    "include": [
      "src/**/*"
    ],
    "aliases": {
      "@/*": "src/*"
    }
  },
  "modules": {
    "app": "src/app/**/*",
    "features": "src/features/*",
    "components": "src/components/**/*"
  },
  "rules": {
    "circular-dependencies": {
      "severity": "error"
    },
    "module-boundaries": {
      "severity": "warn",
      "modules": {
        "@features": "src/features/*"
      },
      "rules": [
        {
          "importer": "@features",
          "imports": "@features",
          "allow": false
        }
      ]
    }
  },
  "output": {
    "format": "markdown"
  }
}