{
  "project": {
    "include": [
      "src/**/*"
    ]
  },
  "modules": {
    "features": "src/features/*"
  },
  "rules": {
    "module-boundaries": {
      "severity": "error",
      "rules": [
        {
          "importer": "features",
          "imports": "features",
          "allow": false
        }
      ]
    }
  },
  "output": {
    "format": "markdown"
  }
}