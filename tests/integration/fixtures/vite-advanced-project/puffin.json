{
  "project": {
    "include": [
      "src/**/*"
    ]
  },
  "rules": {
    "module-boundaries": {
      "severity": "error",
      "modules": {
        "@features": "src/features/*"
      },
      "rules": [
        {
          "importer": "@features",
          "imports": "@features",
          "allow": false
        }
      ]
    }
  },
  "output": {
    "format": "markdown"
  }
}