{
  "project": {
    "include": ["src/**/*"]
  },
  "rules": {
    "module-boundaries": {
      "severity": "error",
      "modules": {
        "@features": "src/features/*",
        "@shared": "src/shared/*"
      },
      "rules": [
        { "from": "@features", "to": "@features", "allow": false, "message": "Features cannot import other features" }
      ]
    }
  }
}
